<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_due_date_wizard_form" model="ir.ui.view">
        <field name="name">account.move.due_date.wizard.form</field>
        <field name="model">account.move.due_date.wizard</field>
        <field name="arch" type="xml">
            <form string="Actualizar Fecha de Vencimiento">
                <group>
                    <field name="due_date"/>
                </group>
                <footer>
                    <button string="Aplicar" type="object" name="action_apply_due_date" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
